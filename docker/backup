FROM ubuntu:latest
EXPOSE 3000
RUN mkdir /server
RUN apt-get update --yes
RUN apt-get install --yes nodejs
RUN apt-get install --yes npm
RUN npm install pm2 -g
RUN ln -s /usr/bin/nodejs /usr/bin/node
COPY app.js /server/app.js
COPY package.json /server/package.json
WORKDIR /server
RUN npm install
CMD node app.js